{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    {% if slider_items|length > 0 %}
        <div id="homeCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for item in slider_items %}
                    <li data-target="#homeCarousel" data-slide-to="{{ loop.index0 }}"
                        class="{{ loop.index0 ? '' : 'active' }}"></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner" role="listbox">
                {% for item in slider_items %}
                    <div class="carousel-item {{ loop.index0 ? '' : 'active' }}">
                        <img src="uploads/slider/{{ item.background }}" alt="">
                        {% if item.title or item.text %}
                            <div class="carousel-caption">
                                {% if item.title %}
                                    <h3>{{ item.title }}</h3>
                                {% endif %}
                                {% if item.text %}
                                    <p>{{ item.text }}</p>
                                {% endif %}
                                {% if item.buttonName and item.buttonUrl %}
                                    <a href="{{ item.buttonUrl }}" class="btn-style1">{{ item.buttonName }}</a>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}

{% endblock %}
